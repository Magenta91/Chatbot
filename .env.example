# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Dialogflow Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
DIALOGFLOW_PROJECT_ID=your_dialogflow_project_id

# Database Configuration
MONGO_URI=mongodb://localhost:27017/ai-chat-platform

# Redis Configuration (optional - falls back to in-memory)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production


# Application Configuration
CLIENT_URL=http://localhost:3000
PORT=4000
NODE_ENV=development

# Feature Flags
USE_DIALOGFLOW=false
SUMMARIZATION_MODEL=mock-model-v1

# Session Management
SESSION_TTL_DAYS=30
MAX_CONTEXT_TOKENS=4000
SUMMARIZATION_THRESHOLD=3000

# Rate Limiting (Generous for free tier)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Safety & Moderation (Disabled for normal chat usage)
ENABLE_PROFANITY_FILTER=false
ENABLE_PROMPT_INJECTION_DETECTION=false

# Observability
LOG_LEVEL=info
ENABLE_METRICS=true